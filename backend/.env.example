# Environment
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=investment_app
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# 2FA
TWO_FACTOR_APP_NAME=Investment App B3

# Analytics Engine (Python)
ANALYTICS_ENGINE_URL=http://localhost:5000

# B3 Integration
B3_API_URL=https://api.b3.com.br
B3_API_KEY=your-b3-api-key
B3_API_SECRET=your-b3-api-secret
PUMA_TRADING_URL=https://puma.b3.com.br
PUMA_USERNAME=your-puma-username
PUMA_PASSWORD=your-puma-password

# SERPRO (KYC)
SERPRO_API_URL=https://gateway.apiserpro.serpro.gov.br
SERPRO_API_KEY=your-serpro-api-key

# PIX (BACEN)
PIX_API_URL=https://api.bcb.gov.br/pix
PIX_CLIENT_ID=your-pix-client-id
PIX_CLIENT_SECRET=your-pix-client-secret

# Tesouro Direto
TESOURO_DIRETO_URL=https://www.tesourodireto.com.br/api
TESOURO_DIRETO_API_KEY=your-tesouro-direto-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Bull Queue
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379

# Email (para notificações)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@investmentapp.com

# Market Data Provider (alternativa à B3)
MARKET_DATA_PROVIDER=brapi
BRAPI_API_URL=https://brapi.dev/api
BRAPI_API_KEY=your-brapi-api-key

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=3000

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this-in-production

# Feature Flags
ENABLE_2FA=true
ENABLE_KYC_VERIFICATION=true
ENABLE_PAPER_TRADING=true
ENABLE_ANALYTICS_ENGINE=true
